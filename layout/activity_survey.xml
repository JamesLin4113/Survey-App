                android:checked="false"
                android:allowUndo="false"
                android:visibility="visible"
                android:layout_below="@+id/tvTextAnswerTwo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AnswerOneTwo"
                android:id="@+id/rbRadioAnswerTwoTwo"
                android:checked="false"
                android:allowUndo="false"
                android:layout_alignParentStart="true"
                android:visibility="visible"
                android:layout_below="@+id/radioButton3"
                android:layout_alignParentLeft="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AnswerOneOne"
                android:id="@+id/rbRadioAnswerTwoThree"
                android:checked="false"
                android:allowUndo="false"
                android:visibility="visible"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/radioButton2"
                android:layout_alignParentLeft="true" />
        </RadioGroup>

        //Question 3
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="QuestionThree"
            android:id="@+id/tvQuestionThree"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnswerThree:"
            android:id="@+id/tvTextAnswerThree"
            android:visibility="visible"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />




        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rgAnswerThree"
            android:visibility="visible"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AnswerOneThree"
                android:id="@+id/rbRadioAnswerThreeOne"
                android:checked="false"
                android:allowUndo="false"
                android:visibility="visible"
                android:layout_below="@+id/tvTextAnswerTwo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AnswerOneTwo"
                android:id="@+id/rbRadioAnswerThreeTwo"
                android:checked="false"
                android:allowUndo="false"
                android:layout_alignParentStart="true"
                android:visibility="visible"
                android:layout_below="@+id/radioButton3"
                android:layout_alignParentLeft="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AnswerOneOne"
                android:id="@+id/rbRadioAnswerThreeThree"
                android:checked="false"
                android:allowUndo="false"
                android:visibility="visible"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/radioButton2"
                android:layout_alignParentLeft="true" />
        </RadioGroup>

        //Question 4
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
