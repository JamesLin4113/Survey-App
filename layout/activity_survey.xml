                android:id="@+id/rbRadioAnswerFourThree"
                android:checked="false"
                android:allowUndo="false"
                android:visibility="visible"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/radioButton2"
                android:layout_alignParentLeft="true" />
        </RadioGroup>

        //Question 5
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="QuestionFive"
            android:id="@+id/tvQuestionFive"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AnswerFive:"
            android:id="@+id/tvTextAnswerFive"
            android:visibility="visible"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />




        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rgAnswerFive"
            android:visibility="visible"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AnswerOneThree"
                android:id="@+id/rbRadioAnswerFiveOne"
                android:checked="false"
                android:allowUndo="false"
                android:visibility="visible"
                android:layout_below="@+id/tvTextAnswerTwo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AnswerOneTwo"
                android:id="@+id/rbRadioAnswerFiveTwo"
                android:checked="false"
                android:allowUndo="false"
                android:layout_alignParentStart="true"
                android:visibility="visible"
